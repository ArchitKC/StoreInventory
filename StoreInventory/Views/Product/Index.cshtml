@model IEnumerable<StoreInventory.Models.ViewModel.ProductDetailsViewModel>

@{
    ViewBag.Title = "Product Details";
}

<h3>Product Details</h3>

@if (!Model.Any()) {
<h1 class="text-danger text-center">No Prodcuts Available</h1>
}
else
{ 
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> 
                @Html.ActionLink(item.Product, "Purchase","", new { Id = item.Id }, null /* html attributes */)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>        
        </tr>
    }

    </table>
}